.post-intro
   .prose

        .cand-hover
            border 1px solid $gray
            box-shadow 0.25rem 0.25rem 0.25rem rgba($gray-light, 0.25)
            border-radius 0.25rem
            padding 0.125rem 0.5rem	
            font-family $national
            font-weight 700
            white-space nowrap
            background-color $white

            &:hover
                border 1px solid $gray-dark
                background-color $gray-light


.year-chart-title
    font-family $national
    font-weight 700
    margin 0 auto
    padding 3rem 1rem 0rem 1rem
    set-type-size('medium', true)

.year-chart-labels
    max-width $column-width
    margin 0 auto
    display flex
    flex-direction row
    justify-content space-between
    padding 1rem 1rem 0 3.5rem

    p
        font-family $national
        margin 0
        padding 0
        set-type-size('small', true)
        color $gray-dark


#year-chart
    max-width $column-width
    padding 0.25rem 1rem 1rem 1rem
    height 28rem
    margin 0 auto

    .year-row
        width 100%
        display flex
        flex-direction row
        margin-bottom 0.25rem
        align-items center

        .year-label
            font-family $national
            margin 0
            padding 0
            set-type-size('small', true)
            color $off-black
            width 2.5rem

        .bar-container
            width calc(100% - 2.5rem)
            height 1.5rem 
            position relative
            align-items center
            display flex

            .bar-rwb
                height 1.5rem
                position absolute
                top 0
                left 0
                width 100%
                background-color $white
                border 1px solid $off-black

            .bar-rwbn
                height 1.5rem
                position absolute
                top 0
                left 0
                background-color $off-black 

                p
                    font-family $national
                    position absolute
                    margin 0
                    padding 0 0 0 0.25rem
                    set-type-size('small', true)
                    font-weight 700

.miniGrid
    max-width 60rem
    display flex
    flex-direction column
    margin 2rem auto
    align-items flex-start
    padding 0 1rem
    
    .prose
        padding 1rem 0    

    h5
        width 100%
        font-family $serif-hed
        set-type-size('x-large', true)
        width 100%
        border-top 1px solid rgba($gray, 0.5)
        padding-top 0.5rem
        max-width 50rem
        margin 0 auto 1.5rem auto

        span
            font-weight 700
            font-family $national

    .chartGrid
        width 100%  
        max-width 50rem
        display flex
        flex-direction row 
        align-items flex-start 
        margin 0 auto 2rem auto
        padding 0
        +mq('bp-4')
          margin-bottom 0 auto 3rem auto

        .colorGroup
            display flex
            flex-direction row
            flex-wrap wrap
            width 50%
            align-items flex-start
            //padding 0.5rem

            p
                width 100%
                font-family $national
                set-type-size('small', true)
                color $gray-dark
                margin 0

            .logoSmall
                max-width 3.5rem
                border 1px solid $off-black
                margin 0.125rem
                height auto

                &.is-highlighted
                    outline 0.125rem solid #F9CF3A
                    outline-offset -0.125rem

                img
                    width 100%
                    min-height 0
