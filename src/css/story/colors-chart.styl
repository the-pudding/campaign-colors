.colors-chart
    width 100%
    padding 0 1rem
    margin 3rem auto
    max-width 70rem

    #scroll-chart
        position relative
        display flex
        flex-direction row

        .scroll-chart__graphic
            width 66%
            position sticky
            top 3rem
            right 0
            transform translate3d(0, 0, 0)

        .scroll-chart__overlay 
            position fixed
            top 3rem
            right 6rem
            height 100%
            max-width 30rem
            width calc(33% - 2rem)
            padding 0
            background-color $white  
            opacity 0
            z-index 999
            padding 1.25rem
            pointer-events none

            &.is-visible
                opacity 0.95 

            .overlay-inset

                h5
                    set-type-size('xx-large', true)
                    font-family $tiempos-hed   
                    margin 0 

                p
                    font-family $national
                    color $gray-dark    
                    margin 0

                img
                    width 100%
                    margin 1rem 0

                .notes
                    font-family $tiempos
                    color $off-black
                    set-type-size('small', true)      

        .scroll-chart__text
            position relative
            top 0
            max-width 30rem
            width 33%
            padding 0

            .step-chart.is-active
                margin 2rem auto
                opacity 1

            .step-chart
                opacity 1

                p
                    background-color $white 
                    //padding 1rem   
                    //box-shadow 0.5rem 0.5rem 1rem rgba($off-black, 0.5)	
                    line-height 1.75

                    .intro-hover
                        border 1px solid $gray
                        box-shadow 0.25rem 0.25rem 0.25rem rgba($gray-light, 0.25)
                        border-radius 0.25rem
                        padding 0.125rem 0.5rem	
                        font-family $national
                        font-weight 700
                        white-space nowrap

                        &:hover
                            background-color $off-white	

                h5
                    set-type-size('xx-large', true)
                    font-family $tiempos-hed   
                    margin 0 0 1rem 0            

                .inset-bar
                    width 100%
                    height 1.5rem
                    position relative

                    .full
                        width 100%
                        position absolute
                        top 0
                        left 0
                        height 1.5rem
                        border 1px solid $off-black

                    .percent
                        height 1.5rem
                        position absolute
                        top 0
                        left 0
                        background-color $off-black
                        width 0%

                    p
                        margin 0 0 0 0.25rem
                        position absolute
                        top 0
                        font-family $national
                        set-type-size('small', true)
                        font-weight 700
                        background-color transparent 
                        opacity 0          

    #chart
        width 66%

        .pudding-chart
            width 100%
            height 100vh

            .year
                width 100%
                border-top 1px solid rgba($gray-light, 0.5)
                padding 0.25rem 0 0.75rem 2.5rem
                position relative

                .year-label
                    position absolute
                    margin -0.35rem 0 0 -2.5rem
                    padding 0
                    font-family $national
                    color $gray-dark
                    set-type-size('small', true)

            .candidate
                width 100%
                display flex
                flex-direction row
                align-items center
                border 1px solid transparent
                border-radius 0.25rem
                //pointer-events none

                &:hover
                    border 1px solid $gray
                    box-shadow 0.25rem 0.25rem 0.25rem rgba($gray-light, 0.25)

                &.faded
                    opacity 0.125    

                &__name
                    font-family $national
                    set-type-size('small', true)
                    margin 0
                    color $gray-dark
                    text-align right
                    width 10rem

                .rwb-group, .other-group
                    display flex
                    flex-direction row
                    padding 0 1rem 0 0.5rem    

                    .color-block
                        width 3.65rem
                        //height 1.5rem
                        border 1px solid $off-black  
                        margin 0 0.5rem 0 0

                        &.empty-block
                            border 3px solid transparent
