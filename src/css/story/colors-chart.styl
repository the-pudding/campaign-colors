.colors-chart
    width 100%
    padding 0 1rem
    margin-top 3rem

    #chart
        width 66%

        .pudding-chart
            width 100%

            .candidate
                width 100%
                height 2rem
                display flex
                flex-direction row
                align-items center
                border 1px solid transparent
                border-radius 0.25rem

                &:hover
                    border 1px solid $gray
                    box-shadow 0.25rem 0.25rem 0.25rem rgba($gray-light, 0.25)

                &.faded
                    opacity 0.25    

                &__name
                    font-family $national
                    set-type-size('small', true)
                    margin 0
                    color $gray-dark
                    text-align right
                    width 10rem

                .rwb-group, .other-group
                    display flex
                    flex-direction row
                    padding 0 1rem    

                    .color-block
                        width 4rem
                        height 1.5rem
                        border 3px solid $off-black  
                        margin 0 0.5rem 0 0

                        &.empty-block
                            border 3px solid transparent
