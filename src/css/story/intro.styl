.intro
	margin 0 auto
	padding 3rem 0

	&__grid
		width 100%
		display flex
		flex-direction row
		flex-wrap wrap
		align-content stretch
		height auto

		.logoDiv
			width 20%
			display flex
			opacity 0

			&.highlight
				opacity 1

	#scroll
		position relative

		.scroll__graphic
			width 100%
			position sticky
			top 3rem
			right 0
			transform translate3d(0, 0, 0)

		.scroll__text
			position relative
			top 0
			max-width 30rem
			width 100%
			padding 0
			margin 1rem auto

			.step.is-active
				opacity 1

			.step
				margin 2rem auto
				opacity 0.5

				p
					background-color $white	
					padding 1rem
					box-shadow 0.5rem 0.5rem 1rem rgba($off-black, 0.5)	
					line-height 1.75

				.intro-hover
					border 1px solid $gray
					box-shadow 0.25rem 0.25rem 0.25rem rgba($gray-light, 0.25)
					border-radius 0.25rem
					padding 0.125rem 0.5rem	
					font-family $national
					font-weight 700

					&:hover
						background-color $off-white		